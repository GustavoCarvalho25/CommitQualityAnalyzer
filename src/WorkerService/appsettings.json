{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/refactorscore-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "MongoDB": "mongodb://admin:admin123@localhost:27017"
  },
  "GitRepository": {
    "RepositoryPath": "C:\\your\\repo\\path\\here"
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434/",
    "DefaultModel": "refactorscore",
    "Temperature": 0.1,
    "MaxTokens": 2048,
    "TopP": 0.9,
    "TopK": 40
  },
  "RedisCache": {
    "ConnectionString": "localhost:6379",
    "KeyPrefix": "refactorscore",
    "DatabaseId": 0,
    "DefaultExpiryHours": 24
  },
  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin123@localhost:27017",
    "DatabaseName": "RefactorScore",
    "CollectionName": "CodeAnalyses"
  },
  "CodeAnalyzer": {
    "ModelName": "refactorscore",
    "MaxCodeLength": 30000,
    "MaxDiffLength": 10000
  },
  "Worker": {
    "ScanIntervalMinutes": 60,
    "MaxProcessingCommits": 10
  }
}
