{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/refactorscore-.log",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": 24,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "MongoDB": "mongodb://admin:admin123@localhost:27017"
  },
  "GitRepository": {
    "RepositoryPath": "C:\\Edata\\backend"
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434/",
    "DefaultModel": "deepseek-mini",
    "Temperature": 0.1,
    "MaxTokens": 2048,
    "TopP": 0.9,
    "TopK": 40,
    "Timeout": 300
  },
  "RedisCache": {
    "ConnectionString": "localhost:6379",
    "KeyPrefix": "refactorscore",
    "DatabaseId": 0,
    "DefaultExpiryHours": 24
  },
  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin123@localhost:27017",
    "DatabaseName": "RefactorScore",
    "CollectionName": "CodeAnalyses"
  },
  "CodeAnalyzer": {
    "ModelName": "deepseek-mini",
    "MaxCodeLength": 4000,
    "MaxDiffLength": 2000
  },
  "Worker": {
    "ScanIntervalMinutes": 5,
    "MaxProcessingCommits": 5,
    "MaxFilesPerCommit": 10,
    "MaxFileSizeKB": 200
  }
}
